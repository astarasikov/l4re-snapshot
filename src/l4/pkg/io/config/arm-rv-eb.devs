// single core EB
hw-root
{
  CTRL => new Device()
  {
    .hid = "System Control";
    new-res Mmio(0x10000000 .. 0x10000fff);
  }

  LCD => new Device()
  {
    .hid = "AMBA PL110";
    new-res Mmio(0x10020000 .. 0x10020fff);
  }

  KBD => new Device()
  {
    .hid = "AMBA KMI Kbd";
    new-res Irq(52);
    new-res Mmio(0x10006000 .. 0x10006fff);
  }

  MOUSE => new Device()
  {
    .hid = "AMBA KMI mou";
    new-res Mmio(0x10007000 .. 0x10007fff);
    new-res Irq(53);
  }

  NIC => new Device()
  {
    .hid = "smc91x";
    #.hid = "smsc911x";
    new-res Mmio(0x4e000000 .. 0x4e000fff);
    new-res Irq(60);
  }

  PCIrootbridge => new Pci_iomem_root_bridge()
  {
    .hid       = "PNP0A03";
    .iobase    = 0x62000000;
    .iosize    = 0x00010000;
    .dev_start = 0x64000000;
    .dev_end   = 0x6fffffff;
    .int_a     = 80;
    .int_b     = 81;
    .int_c     = 82;
    .int_d     = 83;
  }

  MEM1 => new Device()
  {
    .hid = "foomem";
    new-res Mmio_ram(0x10000, 0);
  }
}
