#pragma once

#include <l4/cxx/hlist>

namespace cxx {

class Observer : public H_list_item<Observer>
{
public:
  virtual void notify() = 0;
};

class Notifier : public H_list<Observer>
{
public:
  void notify()
  {
    for (Observer *i = first(); i; i = i->l_next())
      i->notify();
  }
};

}


